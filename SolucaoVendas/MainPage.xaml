<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolucaoVendas.MainPage">

    <ScrollView>

        <VerticalStackLayout Margin="20">

            <Label 
                Text="Gerenciador de vendas" 
                FontSize="Header" 
                HorizontalTextAlignment="Center">
            </Label>
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Button
                    x:Name="BtnVendas"
                    Text="Vendas"
                    Padding="30"
                    Margin="10"
                    HorizontalOptions="Center"
                    Clicked="BtnVendas_Clicked">
                </Button>

                <Button
                    x:Name="BtnDespesas"
                    Text="Despesas"
                    Padding="30"
                    Margin="10"
                    HorizontalOptions="Center"
                    Clicked="BtnDespesas_Clicked">
                </Button>
                
                <Button
                    x:Name="BtnResumos"
                    Text="Resumos"
                    Padding="30"
                    Margin="10"
                    HorizontalOptions="Center"
                    Clicked="BtnResumos_Clicked">
                </Button>
                
                <Button
                    x:Name="BtnCadastros"
                    Text="Cadastros"
                    Padding="30"
                    Margin="10"
                    HorizontalOptions="Center"
                    Clicked="BtnCadastros_Clicked">
                </Button>
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
