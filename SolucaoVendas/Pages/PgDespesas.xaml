<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolucaoVendas.Pages.PgDespesas"
             Title="PgDespesas">
    <VerticalStackLayout>
        <Label 
            Text="Despesas" 
            FontSize="Header" 
            HorizontalTextAlignment="Center">
        </Label>
        
        <!-- Clientes -->

        <Label 
            Text="Cliente"
            Margin="5"
            FontAttributes="Bold"
            FontSize="18">
        </Label>
        <Picker
            Title="Selecione o Cliente"
            Margin="10"
            ItemsSource="{Binding Cliente}"
            ItemDisplayBinding="{Binding Nome}"
            SelectedItem="{Binding ClienteSelecionado}">
        </Picker>
        
        <!--tipo de despesa-->
        <Label 
            Text="Tipo de despesa"
            Margin="5"
            FontAttributes="Bold"
            FontSize="18">
        </Label>
        <Picker
            Title="Selecione o tipo da despesa"
            Margin="10">
        </Picker>
        
        <!--valor da despesa-->
        <Label
            Text="Valor"
            Margin="5"
            FontAttributes="Bold"
            FontSize="18">
        </Label>
        <Entry
            x:Name="TxtValor"
            Keyboard="Numeric"
            Placeholder="Ex: 50,00"
            Margin="10">
        </Entry>

        <!--Botão Salvar -->
        <Button
            x:Name="BtnSave"
            Text="Salvar Despesa"
            Padding="30"
            Margin="10"
            Clicked="BtnSave_Clicked">
        </Button>

        <!--Botão Voltar-->
        <Button
            x:Name="BtnVoltar"
            Text="Voltar"
            Padding="30"
            Margin="10"
            HorizontalOptions="Center"
            Clicked="BtnVoltar_Clicked">
        </Button>
        
    </VerticalStackLayout>
</ContentPage>